= simple_form_for @trip do |f|
  = f.error_notification

  = f.input :name
  = f.input :begun_on, :label => 'from', :include_blank => true
  = f.input :ended_on, :label => 'to', :include_blank => true

  %ul
  = f.simple_fields_for :places do |places_form|
    %li
      = places_form.input :name, :label => "Place/City"

  = f.button :submit, 'Save'
